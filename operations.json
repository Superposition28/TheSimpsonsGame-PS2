{
	"The Simpsons Game (PS2)": [
		{
			"init": true,
			"Instructions": "run main init",
			"python_executable": "python",
			"script": "RemakeRegistry/Games/TheSimpsonsGame PS2/Scripts/init.py",
			"args": []
		},
		{
			"Name": "Rename base folders",
			"Instructions": "run rename script",
			"python_executable": "python",
			"script": "Tools/Process/Rename/RenameFolders.py",
			"args": ["{{RemakeEngine.Directories.TSGPS2SourcePath}}", "--map-db-file", "RemakeRegistry/Games/TheSimpsonsGame PS2/RenameMap.db"]
		},
		{
			"Name": "Extract Archives (.ASR)",
			"Instructions": "run quickbms script using RemakeRegistry/Games/TheSimpsonsGame PS2/Scripts/Asura engine (.asr .pc .en).bms",
			"python_executable": "python",
			"script": "Tools/QuickBMS/bms_extract.py",
			"args": ["--quickbms", "Tools/QuickBMS/exe/quickbms.exe", "--script", "RemakeRegistry/Games/TheSimpsonsGame PS2/Scripts/Asura engine (.asr .pc .en).bms", "--input", "{{RemakeEngine.Directories.TSGPS2SourcePath}}", "--output", "GameFiles/SimpGamePS2OUT", "--extension", ".asr"]
		},
		{
			"Name": "Extract Archives (.EN)",
			"Instructions": "run quickbms script using RemakeRegistry/Games/TheSimpsonsGame PS2/Scripts/Asura engine (.asr .pc .en).bms",
			"python_executable": "python",
			"script": "Tools/QuickBMS/bms_extract.py",
			"args": ["--quickbms", "Tools/QuickBMS/exe/quickbms.exe", "--script", "RemakeRegistry/Games/TheSimpsonsGame PS2/Scripts/Asura engine (.asr .pc .en).bms", "--input", "{{RemakeEngine.Directories.TSGPS2SourcePath}}", "--output", "GameFiles/SimpGamePS2OUT", "--extension", ".en"]
		},
		{
			"Name": "Extract Textures (.txd -> .dds)",
			"python_executable": "python",
			"script": "",
			"args": ["GameFiles/SimpGamePS2OUT"]
		},
		{
			"Name": "Convert Models (.preinstanced -> .blend)",
			"python_executable": "python",
			"script": "",
			"args": [],
			"prompts": [
				{
					"type": "confirm",
					"Name": "verbose",
					"message": "Model Conversion: Enable verbose output?",
					"default": false,
					"cli_arg": "--verbose"
				},
				{
					"type": "confirm",
					"Name": "debug_sleep",
					"message": "Model Conversion: Enable debug sleep?",
					"default": false,
					"cli_arg": "--debug-sleep"
				},
				{
					"type": "confirm",
					"Name": "enable_export",
					"message": "Model Conversion: Export additional formats (FBX/GLTF)?",
					"default": false
				},
				{
					"type": "checkbox",
					"Name": "export_formats",
					"message": "Select export formats:",
					"choices": ["fbx", "glb"],
					"cli_prefix": "--export",
					"condition": "enable_export",
					"validation": {"required": true, "message": "You must select at least one format."}
				}
			]
		},
		{
			"Name": "Convert Videos (.vp6 -> .ogv)",
			"python_executable": "python",
			"script": "Tools/ffmpeg-vgmstream/convert.py",
			"args": ["-m", "ffmpeg", "-s", "{{RemakeEngine.Directories.TSGPS2SourcePath}}\\Assets_1_Video_Movies", "-t", "GameFiles\\SimpGamePS2OUT\\Assets_1_Video_Movies", "-f", "ffmpeg.exe", "-i", ".vp6", "-o", ".ogv", "--overwrite"]
		},
		{
			"Name": "Convert Audio (AGV.wav -> .wav)",
			"python_executable": "python",
			"script": "Tools/ffmpeg-vgmstream/convert.py",
			"args": [
				"-m", "ffmpeg",
				"-s", "GameFiles\\SimpGamePS2OUT\\SOUNDS",
				"-t", "GameFiles\\SimpGamePS2OUT\\Converted\\Assets_1_SOUNDS",
				"-f", "ffmpeg.exe",
				"-i", ".wav",
				"-o", ".wav",
				"--overwrite",
				"--audio-codec", "pcm_s16le",
				"--audio-quality", "0"
			]
		},
		{
			"Name": "flatten folder structure",
			"Instructions": "run flatten script",
			"python_executable": "python",
			"script": "Tools/Process/Flat/flat.py",
			"args": ["GameFiles/SimpGamePS2OUT", "GameFiles/ExtractedOut", "--rules", "RemakeRegistry/Games/TheSimpsonsGame PS2/PathRules.json", "--separator", "++", "--verbose"]
		}
	]
}
